<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.PetWell" parent="Theme.Material3.DayNight.NoActionBar" />

    <style name="Theme.PetWell" parent="Base.Theme.PetWell">
        <!-- Primary brand color. -->
        <item name="colorAccent">@color/secondary_blue</item>
        <item name="colorPrimary">@color/primary_blue</item>
        <item name="colorPrimaryVariant">@color/primary_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary_blue</item>
        <item name="colorSecondaryVariant">@color/secondary_blue</item>
        <item name="colorOnSecondary">@color/secondary_blue</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:colorControlNormal">@color/black</item>
        <!-- Animations -->
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowEnterTransition">@android:transition/fade</item>
        <item name="android:windowExitTransition">@android:transition/fade</item>
        <!--        background-->
        <item name="android:windowBackground">@color/white</item>
    </style>


    <style name="Onboarding" parent="Base.Theme.PetWell">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/primary_blue_dark</item>
        <item name="fontFamily">@font/regular</item>
    </style>

    <style name="Onboarding.Title" parent="Base.Theme.PetWell">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/bold</item>
    </style>

    <style name="CustomToolbarTitle" parent="@style/Widget.MaterialComponents.Toolbar.Primary">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="CustomButtonStyle" parent="Base.Theme.PetWell">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/regular</item>
        <item name="android:gravity">center</item>
        <item name="android:singleLine">false</item>
        <item name="android:lines">2</item>
        <item name="android:maxWidth">95dp</item>
    </style>

    <style name="App.Custom.Indicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/primary_blue_light</item>
        <item name="android:textColor">@color/primary_blue</item>
        <item name="itemTextColor">@color/primary_blue</item>
    </style>


</resources>