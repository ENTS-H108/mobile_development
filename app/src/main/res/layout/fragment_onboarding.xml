<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/onboarding_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.MainActivity"
    app:layoutDescription="@xml/activity_onboarding_scene">

    <ImageView
        android:id="@+id/start_ob"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:importantForAccessibility="no"
        android:src="@drawable/landscape_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/skip_btn"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:fontFamily="@font/semibold"
        android:text="@string/skip"
        android:textColor="@color/primary_blue"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/thumbnail_ob1"
        android:layout_width="0dp"
        android:layout_height="300dp"
        android:importantForAccessibility="no"
        android:paddingHorizontal="20dp"
        android:src="@drawable/img_onboarding"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.3" />

    <TextView
        android:id="@+id/title_ob1"
        style="@style/Onboarding.Title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center_horizontal"
        android:text="@string/title_ob1"
        app:layout_constraintEnd_toEndOf="@id/thumbnail_ob1"
        app:layout_constraintStart_toStartOf="@id/thumbnail_ob1"
        app:layout_constraintTop_toBottomOf="@id/thumbnail_ob1" />

    <TextView
        android:id="@+id/subtitle_ob1"
        style="@style/Onboarding"
        android:paddingHorizontal="20dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/medium"
        android:gravity="center_horizontal"
        android:text="@string/subtitle_ob1"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@id/title_ob1"
        app:layout_constraintStart_toStartOf="@id/title_ob1"
        app:layout_constraintTop_toBottomOf="@id/title_ob1" />

    <ImageView
        android:id="@+id/thumbnail_ob2"
        android:paddingHorizontal="20dp"
        android:layout_width="0dp"
        android:layout_height="300dp"
        android:layout_marginStart="32dp"
        android:importantForAccessibility="no"
        android:src="@drawable/img_onboarding"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.3" />

    <TextView
        android:id="@+id/title_ob2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center_horizontal"
        android:text="@string/title_ob2"
        style="@style/Onboarding.Title"
        app:layout_constraintEnd_toEndOf="@id/thumbnail_ob2"
        app:layout_constraintStart_toStartOf="@id/thumbnail_ob2"
        app:layout_constraintTop_toBottomOf="@id/thumbnail_ob2" />

    <TextView
        android:id="@+id/subtitle_ob2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center_horizontal"
        android:paddingHorizontal="20dp"
        android:text="@string/subtitle_ob2"
        style="@style/Onboarding"
        app:layout_constraintEnd_toEndOf="@id/title_ob2"
        app:layout_constraintStart_toStartOf="@id/thumbnail_ob2"
        app:layout_constraintTop_toBottomOf="@id/title_ob2" />

    <ImageView
        android:id="@+id/thumbnail_ob3"
        android:layout_width="0dp"
        android:paddingHorizontal="20dp"
        android:layout_height="300dp"
        android:layout_marginStart="32dp"
        android:importantForAccessibility="no"
        android:src="@drawable/img_onboarding"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.3" />

    <TextView
        android:id="@+id/title_ob3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center_horizontal"
        android:text="@string/title_ob3"
        style="@style/Onboarding.Title"
        app:layout_constraintEnd_toEndOf="@id/thumbnail_ob3"
        app:layout_constraintStart_toStartOf="@id/thumbnail_ob3"
        app:layout_constraintTop_toBottomOf="@id/thumbnail_ob3" />

    <TextView
        android:id="@+id/subtitle_ob3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center_horizontal"
        android:text="@string/subtitle_ob3"
        android:layout_marginHorizontal="20dp"
        style="@style/Onboarding"
        app:layout_constraintEnd_toEndOf="@id/title_ob3"
        app:layout_constraintStart_toStartOf="@id/title_ob3"
        app:layout_constraintTop_toBottomOf="@id/title_ob3" />

    <androidx.constraintlayout.utils.widget.ImageFilterView
        android:id="@+id/tabs_ob1"
        android:layout_width="15dp"
        android:layout_height="15dp"
        app:altSrc="@drawable/filled_toogle"
        app:srcCompat="@drawable/outline_toogle"
        app:tint="#278187"
        app:layout_constraintEnd_toStartOf="@+id/tabs_ob2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="parent" />

    <androidx.constraintlayout.utils.widget.ImageFilterView
        android:id="@+id/tabs_ob2"
        android:layout_width="15dp"
        android:layout_height="15dp"
        app:altSrc="@drawable/filled_toogle"
        app:srcCompat="@drawable/outline_toogle"
        app:tint="#278187"
        app:layout_constraintBottom_toBottomOf="@+id/tabs_ob1"
        app:layout_constraintEnd_toStartOf="@+id/tabs_ob3"
        app:layout_constraintStart_toEndOf="@+id/tabs_ob1"
        app:layout_constraintTop_toTopOf="@+id/tabs_ob1" />

    <androidx.constraintlayout.utils.widget.ImageFilterView
        android:id="@+id/tabs_ob3"
        android:layout_width="15dp"
        android:layout_height="15dp"
        app:altSrc="@drawable/filled_toogle"
        app:srcCompat="@drawable/outline_toogle"
        app:tint="#278187"
        app:layout_constraintBottom_toBottomOf="@+id/tabs_ob2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tabs_ob2"
        app:layout_constraintTop_toTopOf="@+id/tabs_ob2" />

    <androidx.cardview.widget.CardView
        android:id="@+id/card_start_app"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginBottom="-20dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/google_btn"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="30dp"
                android:layout_marginHorizontal="20dp"
                android:background="@drawable/btn_google_states"
                android:drawableStart="@drawable/google"
                android:paddingHorizontal="20dp"
                android:text="@string/google_btn_text"
                android:fontFamily="@font/semibold"
                android:textColor="@color/black"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/reg_btn"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:text="@string/register"
                    android:layout_marginStart="20dp"
                    android:fontFamily="@font/semibold"
                    android:textColor="@color/primary_blue"
                    android:layout_weight="1"
                    android:background="@drawable/btn_secondary_states"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/log_btn"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="16dp"
                    android:text="@string/login"
                    android:fontFamily="@font/semibold"
                    android:textColor="@color/white"
                    android:layout_weight="1"
                    android:background="@drawable/btn_primary_states"/>
            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.motion.widget.MotionLayout>